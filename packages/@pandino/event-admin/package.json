{
  "name": "@pandino/event-admin",
  "version": "0.8.1",
  "description": "Reference implementation of the Pandino Event Admin API",
  "main": "./dist/cjs/event-admin.cjs",
  "module": "./dist/esm/event-admin.mjs",
  "types": "dist/event-admin.d.mts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/cjs/event-admin.cjs",
      "default": "./dist/esm/event-admin.mjs"
    }
  },
  "private": true,
  "scripts": {
    "test": "jest",
    "build": "rollup -c --environment=PRODUCTION",
    "build:dev": "rollup -c"
  },
  "keywords": [
    "pandino",
    "bundle",
    "event",
    "management",
    "admin"
  ],
  "author": "Norbert Herczeg <norbert.herczeg@blackbelt.hu>",
  "license": "EPL-2.0",
  "engines": {
    "node": ">=14.9.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@pandino/event-api": "^0.8.1",
    "@pandino/log-api": "^0.8.1",
    "@pandino/pandino-api": "^0.8.1",
    "@pandino/rollup-plugin-generate-manifest": "^0.8.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "rollup": "^2.70.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.7.4"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "src/activator.ts"
    ]
  },
  "pandino": {
    "manifest": {
      "Provide-Capability": "@pandino/event-admin;objectClass=\"@pandino/event-admin/EventAdmin\""
    }
  }
}
