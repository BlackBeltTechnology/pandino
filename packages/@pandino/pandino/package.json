{
  "name": "@pandino/pandino",
  "version": "0.8.6",
  "description": "The reference implementation of the Pandino API specification",
  "main": "./dist/cjs/pandino.cjs",
  "module": "./dist/esm/pandino.mjs",
  "types": "dist/pandino.d.mts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/cjs/pandino.cjs",
      "default": "./dist/esm/pandino.mjs"
    }
  },
  "scripts": {
    "test": "jest",
    "build": "rollup -c --environment=PRODUCTION",
    "build:dev": "rollup -c"
  },
  "keywords": [
    "pandino",
    "microfrontend",
    "micro-frontend",
    "library",
    "framework",
    "decouple",
    "runtime"
  ],
  "author": "Norbert Herczeg <norbert.herczeg@blackbelt.hu>",
  "license": "EPL-2.0",
  "engines": {
    "node": ">=14.9.0"
  },
  "files": [
    "dist",
    "src"
  ],
  "devDependencies": {
    "@pandino/pandino-api": "^0.8.6",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "rollup": "^2.70.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.7.4"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "json",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 65,
        "functions": 85,
        "lines": 80
      }
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "src/lib/filter/parse.ts",
      "src/lib/framework/util/fetcher.ts",
      "src/lib/utils/console-logger.ts"
    ]
  }
}
