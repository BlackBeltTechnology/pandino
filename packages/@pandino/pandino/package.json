{
  "name": "@pandino/pandino",
  "version": "0.1.0",
  "description": "The reference implementation of the Pandino API specification",
  "main": "./dist/cjs/pandino.js",
  "module": "./dist/esm/pandino.mjs",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/pandino.js",
      "default": "./dist/esm/pandino.mjs"
    }
  },
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "build": "npm run clean && webpack"
  },
  "keywords": [],
  "author": "Norbert Herczeg <norbert.herczeg@blackbelt.hu>",
  "license": "MIT",
  "engines": {
    "node": ">=14.9.0"
  },
  "dependencies": {
    "semver": "^7.3.5"
  },
  "devDependencies": {
    "@pandino/pandino-api": "^0.1.0",
    "@types/jest": "^27.4.0",
    "@types/semver": "^7.3.9",
    "jest": "^27.4.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "typescript": "^4.7.4",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": ["text", "json", "html"],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 65,
        "functions": 85,
        "lines": 80
      }
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testPathIgnorePatterns": [
      "src/lib/filter/parse.ts",
      "src/lib/framework/util/fetcher.ts",
      "src/lib/utils/console-logger.ts"
    ]
  }
}
