{
  "name": "@pandino/bundle-installer-dom",
  "version": "0.1.0",
  "description": "Install Bundles defined in a browser's DOM",
  "module": "./dist/bundle-installer-dom.js",
  "types": "dist/bundle-installer-dom.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "default": "./dist/bundle-installer-dom.js"
    }
  },
  "private": true,
  "scripts": {
    "build": "rollup -c --environment=PRODUCTION",
    "build:dev": "rollup -c"
  },
  "keywords": [],
  "author": "Norbert Herczeg <norbert.herczeg@blackbelt.hu>",
  "license": "MIT",
  "engines": {
    "node": ">=14.9.0"
  },
  "devDependencies": {
    "@pandino/pandino-api": "^0.1.0",
    "@pandino/rollup-plugin-generate-manifest": "^0.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "rollup": "^2.70.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "pandino": {
    "manifest": {
      "Bundle-ManifestVersion": "1",
      "Bundle-SymbolicName": "${name}",
      "Bundle-Name": "Bundle Installer DOM",
      "Bundle-Version": "${version}",
      "Bundle-Description": "${description}",
      "Bundle-Activator": "./bundle-installer-dom.js",
      "Provide-Capability": "@pandino/bundle-installer;type=\"DOM\""
    }
  }
}
