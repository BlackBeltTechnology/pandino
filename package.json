  "workspaces": [
    "./packages/@pandino/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test --stream",
    "format": "prettier --config .prettierrc \"packages/@pandino/*/src/**/*.{ts,tsx}\" --write",
    "format-examples": "prettier --config .prettierrc examples/*/packages/*/src/**/*.{ts,tsx} --write",
