{
  "name": "pandino-root",
  "license": "EPL-2.0",
  "author": "Norbert Herczeg <norbert.herczeg@blackbelt.hu>",
  "workspaces": [
    "./packages/@pandino/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test --stream",
    "format": "prettier --config .prettierrc \"packages/@pandino/*/src/**/*.{ts,tsx}\" --write",
    "format-examples": "prettier --config .prettierrc examples/*/packages/*/src/**/*.{ts,tsx} --write",
    "new-version": "lerna version --conventional-commits --yes",
    "new-publish": "lerna publish",
    "new-publish:ci": "lerna publish --yes",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^1.11.1",
    "@lerna-lite/run": "^1.11.1",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": ">=14.9.0",
    "npm": ">=7.0.0"
  }
}
