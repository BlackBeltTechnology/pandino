{
  "name": "pandino-root",
  "license": "EPL-2.0",
  "author": "Norbert Herczeg <norbert.herczeg@blackbelt.hu>",
  "workspaces": [
    "./packages/@pandino/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "build": "lerna run build --stream",
    "test": "lerna run test --stream",
    "format": "prettier --config .prettierrc \"packages/@pandino/*/src/**/*.{js,ts,tsx}\" --write",
    "format-examples": "prettier --config .prettierrc examples/*/packages/*/src/**/*.{ts,tsx} --write",
    "new-version": "lerna version --conventional-commits --yes",
    "new-publish": "lerna publish --conventional-commits",
    "new-publish:ci": "lerna publish --conventional-commits --yes",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^1.11.1",
    "@lerna-lite/run": "^1.11.1",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "prettier": "^2.7.1",
    "rollup": "^2.70.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "^4.7.4",
    "ts-jest": "^27.1.2"
  },
  "engines": {
    "node": ">=14.9.0",
    "npm": ">=7.0.0"
  }
}
